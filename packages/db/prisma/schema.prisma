generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    ClosedOrder[]
  tokens    MagicLinkToken[]
}

model MagicLinkToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  token     String   @unique        
  expiresAt DateTime               
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ClosedOrder {
  id         String   @id @default(cuid())       
  userId     String
  user       User     @relation(fields: [userId], references: [id])

  type       OrderType                            
  quantity   Float
  leverage   Float
  entryPrice Float
  exitPrice  Float
  pnl        Float                                

  assetId    String
  asset      Asset    @relation(fields: [assetId], references: [id])

  openedAt   DateTime
  closedAt   DateTime @default(now())
}

model Asset{
  id             String   @id @default(cuid())
  symbol         String   @unique
  name           String
  imageUrl       String?
  decimals       Int
  existingTrades ClosedOrder[]
}

enum OrderType {
  BUY
  SELL
}
